{
    "description" : "SiteConfig for new MPApi, pyhton flask web services.",
    "settings" : 
    {
        "services":
        {
            "console":false,
            "mpwsl":false
        },
        "paths": 
        {
            "base":"/opt/MacPatch/Server",
            "content":"/opt/MacPatch/Content/Web"
        },
        "server": {
            "isMaster" : false,
            "autoGenServerKeys": true,
            "pubKey": "/opt/MacPatch/Server/conf/etc/certs/server_pub.pem",
            "priKey": "/opt/MacPatch/Server/conf/etc/certs/server_pri.pem",
            "inventory_dir": "/opt/MacPatch/Server/Data/Inventory",
            "apiKey": "123456"
        },
        "users": 
        {
            "admin": {
                "enabled": true,
                "name":"mpadmin",
                "pass":"*mpadmin*"
            }    
        },
        "ldap": 
        {
            "enabled": false,
            "server":"SERVERNAME",
            "searchbase":"SEARCH-BASE",
            "attributes":"givenname,initials,sn,mail,memberOf,dn,samAccountName,userPrincipalName",
            "port":"SERVER-PORT",
            "secure":"AD-DOMAIN-SSL",
            "useSSL": true,
            "loginAttr":"LOGIN-ATTRIBUTE",
            "loginUsrPrefix":"LOGIN-PREFIX",
            "loginUsrSufix":"LOGIN-SUFFIX"
        },
        "database": 
        {
            "prod": {
                "enabled": "YES",
                "dsName":"mpds",
                "dbHost":"127.0.0.1",
                "dbPort":"3306",
                "dbName":"MacPatchDB3",
                "hoststringPre":"jdbc:mysql:",
                "hoststringURI":"?cacheResultSetMetadata=false&amp;autoReconnect=true&amp;zeroDateTimeBehavior=convertToNull",
                "drivername":"com.mysql.jdbc.Driver",
                "username":"mpdbadm",
                "password":"password",
                "maxconnections":500,
                "logintimeout":30,
                "connectiontimeout":30,
                "connectionretries":2
            },
            "ro": {
                "enabled": "YES",
                "dsName":"mpdsro",
                "dbHost":"127.0.0.1",
                "dbPort":"3306",
                "dbName":"MacPatchDB3",
                "hoststringPre":"jdbc:mysql:",
                "hoststringURI":"?cacheResultSetMetadata=false&amp;autoReconnect=true&amp;zeroDateTimeBehavior=convertToNull",
                "drivername":"com.mysql.jdbc.Driver",
                "username":"mpdbro",
                "password":"password",
                "maxconnections":100,
                "logintimeout":30,
                "connectiontimeout":30,
                "connectionretries":2
            }
        },
        "ldap_filters": 
        [
            {   "config_name":"DEMO_CONFIG",
                "config_enabled": false,
                "config_ldap": { 
                    "server": "SERVERNAME.COM",
                    "port": 636,
                    "secure": "1", 
                    "searchbase": "SEARCH-BASE",  
                    "attributes": "cn,name,dn,samAccountName,memberOf",
                    "userDN": "USER DN PATH",
                    "userPas": "USER PASSWORD"
                }
            }
        ],
        "mailserver": 
        {
            "enabled": false,
            "server":"127.0.0.1",
            "port": 25,
            "username":"exampleusername",
            "password":"examplepassword"
        },
        "dbSchema":
        {
            "checkSchema": false
        }
    }
}
